.contentSection {
    background-color: var(--palette-accent);

    margin-top: 6.5em;
    margin-bottom: 6.5em;
    margin-right: 0;
    margin-left: 0;
    position: relative;
}

.contentSection:before, .contentSection:after {
    background-repeat: no-repeat;
    background-size: 100% 100%;
    content: '';
    display: block;
    height: 6.5em; /* this is a var: size.wrapper-edges.large */
    position: absolute;
    width: 100%;
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='100' height='100' viewBox='0 0 100 100' preserveAspectRatio='none'%3E%3Cpolygon points='0,100 100,0 100,100' style='fill:%234c5c96%3B' /%3E%3C/svg%3E");
}

.contentSection:before {
    left:0;
    top: -6.5em; /* var */
}

.contentSection:after {
    bottom: -6.5em; /* var */
    left: 0;
    transform: scaleY(-1);
}

.contentSection-inner {
    padding-top: 3em;
    padding-bottom: 3em;
}

.contentSection-altFacing:before {
    transform: scaleX(-1);

}

.contentSection-altFacing:after {
    transform: scaleY(-1) scaleX(-1);
}

.contentSection-style1 {
    background-color: var(--palette-accent) !important;
}

.contentSection-style2 {
    background-color: #f00 !important;
}

.contentSection-style2:before, .contentSection-style2:after {
    box-shadow: inset 0 -1px 0 0 #f00,0 1px 0 0 #f00;
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='100' height='100' viewBox='0 0 100 100' preserveAspectRatio='none'%3E%3Cpolygon points='0,100 100,0 100,100' style='fill:%2345558d%3B' /%3E%3C/svg%3E");
}

.contentSection-style3 {
    background-color: #0f0 !important;
}

.contentSection-style3:before, .contentSection-style3:after {
    box-shadow: inset 0 -1px 0 0 #0f0,0 1px 0 0 #0f0;
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='100' height='100' viewBox='0 0 100 100' preserveAspectRatio='none'%3E%3Cpolygon points='0,100 100,0 100,100' style='fill:%233f4e85%3B' /%3E%3C/svg%3E");
}
